# =============================================================================
# Investment Portfolio System — Environment Variables
# Copy this file to .env and fill in your values.
# NEVER commit .env to git.
# =============================================================================

# =============================================================================
# API Keys (all free tiers are sufficient)
# =============================================================================

# Alpha Vantage — free tier: 25 calls/day
# Get key: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Finnhub — free tier: 60 calls/min
# Get key: https://finnhub.io/register
FINNHUB_API_KEY=your_finnhub_key_here

# FRED (Federal Reserve Economic Data) — free, generous limits
# Get key: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_key_here

# Anthropic (Claude) — used for narrative analysis
# Get key: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_key_here

# =============================================================================
# Database
# =============================================================================

# PostgreSQL + TimescaleDB connection string
DATABASE_URL=postgresql://investing_user:your_password@localhost:5432/investing_db

# Individual DB components (used as fallback by some modules)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=investing_db
DB_USER=investing_user
DB_PASSWORD=your_password

TIMESCALE_ENABLED=true

# =============================================================================
# Application Settings
# =============================================================================

DEBUG=false
LOG_LEVEL=INFO
TIMEZONE=America/New_York

# =============================================================================
# Portfolio Settings
# =============================================================================

MONTHLY_CONTRIBUTION=850       # Your monthly investable amount ($)
RISK_TOLERANCE=moderate        # conservative | moderate | aggressive

# =============================================================================
# Alerts & Notifications (optional — leave as false to disable)
# =============================================================================

ENABLE_EMAIL_ALERTS=false
EMAIL_ADDRESS=your_email@example.com

ENABLE_TELEGRAM_BOT=false
TELEGRAM_BOT_TOKEN=your_token_here
TELEGRAM_CHAT_ID=your_chat_id
